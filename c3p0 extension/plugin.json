{
  "version": "1.01",
  "name": "jmx.c3p0",
  "type": "JMX",
  "entity": "PROCESS_GROUP_INSTANCE",
  "processTypes": [10, 12, 13, 16, 17, 18],
    "configUI" : {
        "displayName": "c3p0 JMX"
    },
  "metrics": [
    {
      "timeseries": {
        "key": "maxPoolSize",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.mchange.v2.c3p0",
        "keyProperties": {
          "type": "PooledDataSource*"
        },
        "allowAdditionalKeys": true,
        "attribute": "maxPoolSize",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "SUM",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    },
    {
      "timeseries": {
        "key": "numConnections",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.mchange.v2.c3p0",
        "keyProperties": {
          "type": "PooledDataSource*"
        },
        "allowAdditionalKeys": true,
        "attribute": "numConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "SUM",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    },
    {
      "timeseries": {
        "key": "numBusyConnections",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.mchange.v2.c3p0",
        "keyProperties": {
          "type": "PooledDataSource*"
        },
        "allowAdditionalKeys": true,
        "attribute": "numBusyConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "SUM",
        "splitting": {
            "name": "ConnectionPoolName",
            "type": "keyProperty",
            "keyProperty": "type"
        }
      }
    },
    {
      "timeseries": {
        "key": "numUnclosedOrphanedConnections",
        "unit": "Count",
        "dimensions": [
          "rx_pid",
          "ConnectionPoolName"
        ]
      },
      "source": {
        "domain": "com.mchange.v2.c3p0",
        "keyProperties": {
          "type": "PooledDataSource*"
        },
        "allowAdditionalKeys": true,
        "attribute": "numUnclosedOrphanedConnections",
        "calculateDelta": false,
        "calculateRate": false,
        "aggregation": "SUM",
